version: "3.7"

services:
{% for group in groups %}
{% for applicationName, applicationData in group['applications'] %}
{% if applicationData['application'] != 'static' %}
  {{ applicationName | lower }}:
    environment:
      SPRYKER_TESTING_ENABLED: 1
{% endif %}
{% endfor %}
{% endfor %}

  webdriver:
    image: alexjo/chromedriver-chromium
    networks:
      - public
    init: true
    labels:
      'spryker.app.name': webdriver
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    expose:
      - "4444"
    healthcheck:
      test: [ "CMD", "bash", "-c", "(echo >/dev/tcp/localhost/4444) &>/dev/null" ]
      interval: 5s
      timeout: 5s
      retries: 5
    command: [ "--port=4444", "--whitelisted-ips=", "--url-base=/wd/hub" ]

  scheduler:
    image: nginx:alpine
    user: "0:0"
    volumes:
      - ./${DEPLOYMENT_PATH}/context/nginx/dummy/scheduler.conf:/etc/nginx/conf.d/default.conf:ro
