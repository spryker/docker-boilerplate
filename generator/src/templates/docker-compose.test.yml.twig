version: "3.7"

services:
{% for group in groups %}
{% for applicationName, applicationData in group['applications'] %}
{% if applicationData['application'] != 'static' %}
  {{ applicationName | lower }}:
    environment:
      SPRYKER_TESTING_ENABLED: 1
{% endif %}
{% endfor %}
{% endfor %}

{% set webdriver_engine = services['webdriver']['engine'] | lower | default ('phantomjs') %}
{% set webdriver_version = services['webdriver']['version'] | default('default') %}
{% include "service/" ~ webdriver_engine ~ "/" ~ webdriver_version ~ "/" ~  webdriver_engine ~ ".yml.twig" with { serviceName: 'webdriver' } only %}

  scheduler:
    image: nginx:alpine
    user: "0:0"
    volumes:
      - ./${DEPLOYMENT_PATH}/context/nginx/dummy/scheduler.conf:/etc/nginx/conf.d/default.conf:ro
