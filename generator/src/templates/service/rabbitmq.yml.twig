  {{ serviceName }}:
    image: spryker/rabbitmq:3.7.14
    hostname: {{ serviceName }} # RabbitMQ determinate cluster but its hostname
    networks:
      - services
      - private
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "5672" ]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
      RABBITMQ_DEFAULT_USER: "{{ serviceData['api']['username'] }}"
      RABBITMQ_DEFAULT_PASS: "{{ serviceData['api']['password'] }}"
    volumes:
      - {{ serviceName }}-data:/var/lib/rabbitmq:rw
