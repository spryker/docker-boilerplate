  {{ serviceData.project_name ~ '_' ~ serviceName }}:
    image: spryker/jenkins:2.324
    container_name: {{ serviceData.project_name ~ '_' ~ serviceName }}
    networks:
      - {{ internal_project_name }}_private
    labels:
      'spryker.app.name': {{ serviceData.project_name ~ '_' ~ serviceName }}
      'spryker.app.type': services
      'spryker.project': ${SPRYKER_DOCKER_PREFIX}:${SPRYKER_DOCKER_TAG}
    healthcheck:
      test: [ "CMD", "nc", "-z", "localhost", "8080" ]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
      JAVA_OPTS: '-Djenkins.install.runSetupWizard=false -Xms128m -Xmx128m -Dhudson.security.csrf.GlobalCrumbIssuerConfiguration.DISABLE_CSRF_PROTECTION={{ serviceData['csrf-protection-enabled'] ? 'false' : 'true' }}'
    volumes:
      - {{ serviceData.project_name ~ '-' ~ serviceName }}-{{ serviceData['engine'] }}-data:/var/jenkins_home:rw
      - {{ serviceData.deployment_path }}/context/jenkins/spryker.sh:/usr/bin/spryker.sh:rw
      - {{ serviceData.deployment_path }}/context/jenkins/groovy/setupCountOfExecutors.groovy:/usr/share/jenkins/ref/init.groovy.d/setupCountOfExecutors.groovy
